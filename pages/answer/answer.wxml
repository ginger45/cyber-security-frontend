<!--pages/answer/answer.wxml-->
<view class="container">
  <image class="bgImg" src="{{staticUrl}}/images/答题背景.png" ></image>

  <view class="putpic">
    <image class="smallpic" mode="aspectFit" src="{{staticUrl}}/images/举手图.png"></image>
  </view>

  <!--透明区域-->
  <view class="mainblock">
    <!--题目区-->
    <view class="titleblock">
      <form action="" bindsubmit="formSubmit" name="radio">
        <!--问题-->
        <view class="title">
          <text class="titletext">
            {{question.content}}
          </text>
        </view>
        <!--选项-->
        <view wx:if="{{type == 1}}" class="option">
          <radio-group class="radio-group" name="radio" bindchange="radioChange"> 
            <radio class="radio" wx:key="optionId" value="1">正确</radio>
            <radio class="radio" wx:key="optionId" value="0">错误</radio>
          </radio-group>
        </view>
        <view wx:if="{{type == 2}}" class="option">
          <radio-group class="radio-group" name="radio" bindchange="changeTest"> 
            <radio class="radio" wx:for="{{question.optionList}}" wx:key="optionId" value="{{item.optionId}}" >
                  <text>{{item.content}}</text>
            </radio>
          </radio-group>
        </view>
        <view wx:if="{{type == 3}}" class="option">
          <checkbox-group class="checkbox-group" name="checkbox"  bindchange="changeTest">
            <checkbox class="checkbox" wx:for="{{question.optionList}}"  wx:key="optionId" value="{{item.optionId}}">
                  <text>{{item.content}}</text>
            </checkbox>
          </checkbox-group>
        </view>
        <view class="btn-area">
          <button class="button" formType="submit">确认</button>
          <button wx:if="{{item<9}}" bindtap="nextQue" class="button"> 下一题</button>
        </view>
      
      </form>
    </view>
  </view>

</view>

<view class="modal_mask" bindtap="hideModal" wx:if="{{showModal}}"></view>
<view class="modal_dialog" style="background:url('{{staticUrl}}/images/answer_right.png') center center no-repeat; width:60%; height:70%; background-size: cover;" wx:if="{{showModal == 1}}">
</view>
<view class="modal_dialog" style="background:url('{{staticUrl}}/images/answer_wrong.png') center center no-repeat; width:60%; height:70%; background-size: cover;" wx:if="{{showModal == 2}}">
</view>
<view class="okBtn" bindtap="hideModal" style="background:url('{{staticUrl}}/images/ok_btn.png') center center no-repeat; width:20%; height:5%; background-size: cover;"  wx:if="{{showModal}}">
</view>