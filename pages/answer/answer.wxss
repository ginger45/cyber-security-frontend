/* pages/answer/answer.wxss */
.bgImg{
  width: 100vw;
  height: 100vh;
  position: absolute;
  z-index: -99;
}
/*答题区域 含图*/
.mainblock{
  position: absolute;
  top: 15%;
  height:75vh;
  left: 10%;
  right: 10%;
  border-radius: 5%;
  background-color:rgb(255, 255, 255, 0.5);
  z-index: -11;
  
}
/*举手图*/
.smallpic{
  height: 100%;
  width: 100%;
  
}
/*放举手图*/
.putpic{
  position: absolute;
  top: 8%;
  left: 22%;
  right: 22%;
  height: 15%;

}
/*题目区*/
.titleblock{
  position: absolute;
  width: 100%;
  top: 11%;
  height: 82%;
  overflow: auto;
  padding: 5rpx;
  font-family: STHeiti Light;
}

.title{
  padding-left: 20rpx;
  padding-right: 10rpx;
  font-weight: bold;
  font-size: large;
}

.radio {
  display: block;
  border-top: 2px solid rgb(7, 7, 7);
  padding: 10rpx;
  padding-right: 20rpx;
  border: none;
  font-weight: bold;
}

.checkbox{
  display: block;
  border-top: 1px solid rgb(12, 12, 12);
  padding: 2px;
  border: none;
}

radio .wx-radio-input,checkbox .wx-checkbox-input{
  flex: none;
  transform: scale(0.6,0.6);
}


.button{
  margin-top: 5%;
  margin-left: 30%;
  margin-right: 30%;
  background-color: rgb(37, 199, 59, 0.7);
  border-radius: 5%;
}

/*答题框*/
.modal_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.9;
  overflow: hidden;
  z-index: 2;
}

.modal_dialog{
  /* overflow: hidden;   */
  position: fixed;  
  top: 10%;  
  left: 20%;  
  z-index: 1001;  
  background: transparent;  
  border-radius: 3px;
  border: 1px solid;
}

.okBtn{
  position: fixed;  
  left: 40%;
  z-index: 1001;  
  bottom: 10%;
}