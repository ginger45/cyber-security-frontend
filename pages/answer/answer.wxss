/* pages/answer/answer.wxss */
.bgImg{
  width: 100vw;
  height: 100vh;
  position: absolute;
  z-index: -99;
}
/*答题区域 含图*/
.mainblock{
  position: absolute;
  top: 15%;
  height:80vh;
  left: 10%;
  right: 10%;
  opacity: 0.5;
  border-radius: 5%;
  background-color:  #fff;
  z-index: -55;
}
/*举手图*/
.smallpic{
  height: 100%;
  width: 100%;
}
/*放举手图*/
.putpic{
  position: absolute;
  top: 8%;
  left: 22%;
  right: 22%;
  height: 15%;
}
/*题目区*/
.titleblock{
  position: absolute;
  width: 100%;
  top: 10%;
  height: 82%;
}

.radio {
  display: block;
  border-top: 2px solid #ddd;
  padding: 5px;
}

.button{
  margin-top: 5%;
  margin-left: 30%;
  margin-right: 30%;
  background-color: rgb(37, 199, 59);
  border-radius: 5%;
}

/*答题框*/
.modal_mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.9;
  overflow: hidden;
  z-index: 2;
}

.modal_dialog{
  /* overflow: hidden;   */
  position: fixed;  
  top: 10%;  
  left: 20%;  
  z-index: 1001;  
  background: transparent;  
  border-radius: 3px;
  border: 1px solid;
}

.okBtn{
  position: fixed;  
  left: 40%;
  z-index: 1001;  
  bottom: 10%;
}